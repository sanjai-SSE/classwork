#include <stdio.h>


double calculateArea(double radius) {
    return PI * radius * radius;
}

int main() {
    double radius, area;
    
    printf("Enter the radius of the circle: ");
    scanf("%lf", &radius);
    
    area = calculateArea(radius);
    
    printf("The area of the circle is: %.2lf\n", area);
    
    return 0;
}
